<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="3dp"
    android:layout_marginRight="3dp"
    android:layout_marginTop="2dp"
    app:cardCornerRadius="3dp">

    <RelativeLayout
        android:id="@+id/collapsing_toolbar_recycler_view_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ccc"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/collapsing_toolbar_recycler_view_item_image"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/imv_playlist_avatar"
            android:layout_width="50dp"
            android:src="@drawable/anhbia"
            android:layout_margin="8dp"
            android:layout_marginRight="10dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/collapsing_toolbar_recycler_view_item_image"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tvPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tvItemCount"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="3dp"
            android:layout_toRightOf="@id/imv_playlist_avatar"
            android:text="gsdejgndkjgnmdgdg"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvItemCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/collapsing_toolbar_recycler_view_item_image"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="8dp"
            android:layout_toRightOf="@id/imv_playlist_avatar"
            android:text="11 video"
            android:textColor="#fff"
            android:textAllCaps="false"
            android:textSize="8sp" />
    </RelativeLayout>

</android.support.v7.widget.CardView>